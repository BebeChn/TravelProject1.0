@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/2.1.4/toastr.min.js"></script>
    <script>
        let baseAddress = "https://localhost:7025";
        let app = new Vue({
            el: "#app",
            data: {
                products: []
            },
            mounted: function () {
                let _this = this;
                fetch(`${baseAddress}/api/ProductApi/GetProduct`)
                    .then(response => {
                        if (response.ok) return response.json();
                    }).then(data => {
                        _this.products = data;
                    })
            },
            methods: {
                ShowMessage: function () {
                    toastr["success"]("商品已加入購物車！");
                }
            }
        })
    </script>
