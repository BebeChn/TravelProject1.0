@{
    ViewData["Title"] = "購物車";
}

@section Styles{
    <link href="~/css/cart.css" rel="stylesheet" />
}

<h1>購物車</h1>

<table class="table table-striped table-bordered table-hover">
    <thead>
        <tr>
            <th>全選</th>
            <th>商品圖片</th>
            <th>商品名稱</th>
            <th>數量</th>
            <th>價格</th>
            <th>操作</th>
        </tr>
    </thead>
    <tbody class="cart">
        <tr class="cart-item">
            <td>
                <input class="inp-cart" type="checkbox" onclick="totalPrice()" />
            </td>
            <td>
                <img style="width:100px;height:100px;" src="~/lib/image/mountain.jpeg" />
            </td>
            <td>
                小王子飯店
            </td>
            <td class="cart-quantity">
                1
            </td>
            <td class="cart-price">
                9999
            </td>
            <td>
                <button class="btn btn-delete">刪除</button>
            </td>
        </tr>
        <tr class="cart-item">
            <td>
                <input class="inp-cart" type="checkbox" onclick="totalPrice()" />
            </td>
            <td>
                <img style="width:100px;height:100px;" src="~/lib/image/mountain.jpeg" />
            </td>
            <td>
                小國王飯店
            </td>
            <td class="cart-quantity">
                1
            </td>
            <td class="cart-price">
                10000
            </td>
            <td>
                <button class="btn btn-delete">刪除</button>
            </td>
        </tr>
    </tbody>
</table>
<hr />
<div class="total">
    <div>
        <span class="span-total">總金額：</span>
        <span class="total-price">NT0</span>
    </div>
    <div>
        <button class="btn btn-buy">前往結帳</button>
    </div>
</div>

@section Scripts{
    <script src="~/js/cart.js"></script>
}