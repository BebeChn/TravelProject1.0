@{
    ViewData["Title"] = "購物車";
}

@section Styles{
    <link href="~/css/cart.css" rel="stylesheet" />
}

<div id="app" class="container">
    <h1>購物車</h1>
    <table class="table table-striped table-bordered table-hover">
        <thead class="info">
            <tr>
                <th><input type="checkbox" /></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="cart" v-for="(c,index) in cartItem" :key="c.cartId">
            <tr class="cart-item">
                <td align="center" valign="middle"><input class="inp-cart" type="checkbox" /></td>
                <td align="center" valign="middle"><img style="width:100px;height:100px;" src="~/lib/image/mountain.jpeg" /></td>
                <td align="center" valign="middle">{{c.cartName}}</td>
                <td align="center" valign="middle" class="cart-quantity">{{c.cartQuantity}}</td>
                <td align="center" valign="middle" class="cart-price">{{c.cartPrice}}</td>
                <td align="center" valign="middle">{{c.cartDate}}</td>
                <td align="center" valign="middle"><button class="btn btn-delete danger" v-on:click="removeItem(c)"><i class="fa-solid fa-trash-can"></i>刪除</button></td>
            </tr>
        </tbody>
    </table>
    <div class="total">
        <div class="calculate">
            <span class="total-title">總金額：</span>
            <input class="total-price" readonly />
        </div>
        <div>
            <button class="btn btn-buy info">前往結帳</button>
        </div>
    </div>
</div>

@section Scripts{
    @* <script src="~/js/cart.js"></script> *@
    <script>
        let baseAddress = "https://localhost:7025";
        var app = new Vue({
            el: '#app',
            data: {
                cartItem: []
            },
            mounted: function () {
                let _this = this;
                fetch(`${baseAddress}/api/CartApi/GetCart/69`, { method: "GET" })
                    .then(response => {
                        if (response.ok) return response.json();
                    }).then(data => {
                        _this.cartItem = data;
                    }).catch(error => {
                        console.log(error);
                    })
            },
            methods: {
                removeItem: function () {
                    let _this = this;
                    fetch(`${baseAddress}/api/CartApi/RemoveFromCart`, { method: "DELETE" })
                        .then(response => {
                            if (response.ok) console.log("刪除成功!")
                        }).catch(error => {
                            console.log(error);
                        })
                }
            }
        })
    </script>
}