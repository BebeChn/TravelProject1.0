@{
    ViewData["Title"] = "購物車";
}

@section Styles{
    <link href="~/css/cart.css" rel="stylesheet" />
}

<div class="container">
    <h1>購物車</h1>
    <table class="table table-striped table-bordered table-hover">
        <thead class="info">
            <tr>
                <th><input type="checkbox" /></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody class="cart">
            <tr class="cart-item">
                <td align="center" valign="middle"><input class="inp-cart" type="checkbox" onclick="totalPrice()" /></td>
                <td align="center" valign="middle"><img style="width:100px;height:100px;" src="~/lib/image/mountain.jpeg" /></td>
                <td align="center" valign="middle">小王子飯店</td>
                <td align="center" valign="middle" class="cart-quantity">1</td>
                <td align="center" valign="middle" class="cart-price">9999</td>
                <td align="center" valign="middle">2023-08-31</td>
                <td align="center" valign="middle"><button class="btn btn-delete danger"><i class="fa-solid fa-trash-can"></i>刪除</button></td>
            </tr>
            <tr class="cart-item">
                <td align="center" valign="middle"><input class="inp-cart" type="checkbox" onclick="totalPrice()" /></td>
                <td align="center" valign="middle"><img style="width:100px;height:100px;" src="~/lib/image/mountain.jpeg" /></td>
                <td align="center" valign="middle">小國王飯店</td>
                <td align="center" valign="middle" class="cart-quantity">1</td>
                <td align="center" valign="middle" class="cart-price">10000</td>
                <td align="center" valign="middle">2023-08-31</td>
                <td align="center" valign="middle"><button class="btn btn-delete danger"><i class="fa-solid fa-trash-can"></i>刪除</button></td>
            </tr>
        </tbody>
    </table>
    <div class="total">
        <div class="calculate">
            <span class="total-title">總金額：</span>
            <span class="total-price">NT0</span>
        </div>
        <div>
            <button class="btn btn-buy info">前往結帳</button>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/cart.js"></script>
}