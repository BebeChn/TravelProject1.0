@{
    Layout = null;
}

<style>
    .container {
        z-index: -1;
        background-image: url('../img/homeindex.jpg');
    }

    .form {
        border: 1px solid white;
        border-radius: 20px;
        text-align: center;
        width: 500px;
        margin-left: 30%;
        height: 600px;
        z-index: 1;
        backdrop-filter: blur(30px);
    }

    .form-title {
        border-top-left-radius: 20px;
        border-top-right-radius: 20px;
        background-color: #34ff00;
    }

        .form-title h1 {
            color: white;
            margin: 0;
        }

    .form div {
        margin-bottom: 30px;
    }

        .form div label {
            color: white;
            font-size: 22px;
            font-weight: bold;
        }

        .form div input {
            color: white;
            border: none;
            outline: none;
            font-size: 22px;
            background: transparent;
            border-bottom: 1px solid white;
        }

    .title {
        font-size: 28px;
        text-align: center;
        align-items: center;
        color: white;
    }

    .button_hover {
        border-radius: 0px;
        position: relative;
        z-index: 1;
        -webkit-transition: all 0.3s linear;
        -o-transition: all 0.3s linear;
        transition: all 0.3s linear;
        overflow: hidden;
        border: 0px;
        display: inline-block;
        text-align: center;
    }

        .button_hover:before {
            content: "";
            width: 100%;
            height: 100%;
            left: 0;
            top: 0;
            position: absolute;
            -webkit-transform: translateX(-100%);
            -ms-transform: translateX(-100%);
            transform: translateX(-100%);
            z-index: -1;
            background: #222222;
            -webkit-transition: all 0.3s linear;
            -o-transition: all 0.3s linear;
            transition: all 0.3s linear;
            opacity: 0;
        }

        .button_hover:hover {
            color: #fff;
        }

            .button_hover:hover:before {
                -webkit-transform: translateX(0);
                -ms-transform: translateX(0);
                transform: translateX(0);
                opacity: 1;
            }

    .theme_btn_two {
        font-size: 20px;
        font-weight: 500;
        line-height: 30px;
        background: #222222;
        color: #fff;
        text-transform: uppercase;
        padding: 5px 29px;
    }

    .info {
        background: #38a4ff;
    }

        .info:before {
            background: #298cdf;
        }

    .home {
        margin-top: 60px;
    }
</style>

<div class="container">
    <div class="form">
        <div class="form-title">
            <h1>付款成功</h1>
        </div>
        <div class="title">
            <span>旅遊電商</span>
        </div>
        <div>
            <label>訂單編號:</label>
            <input readonly />
        </div>
        <div>
            <label>交易序號:</label>
            <input readonly />
        </div>
        <div>
            <label>訂單金額:</label>
            <input readonly />
        </div>
        <div>
            <label>交易結果:</label>
            <input readonly />
        </div>
        <div>
            <label>交易時間:</label>
            <input readonly />
        </div>
        <div class="home">
            <button class="button_hover theme_btn_two info">返回首頁</button>
        </div>
    </div>
</div>