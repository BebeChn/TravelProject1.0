                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                            <tr>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                                <td></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </section>
        </div>
        <div class="col-md-4">
            <section class="ftco-section">
                <h2 class="title">選擇項目</h2>
                <div class="choice">
                    <label class="label-title">數量：</label>
                    <br />
                    <label class="label-title">金額：</label>
                    <span class="total-price">0</span>
                </div>
                <div class="choice">
                    <button class="btn btn-cart">加入購物車</button>
                    <button class="btn btn-buy">立即訂購</button>
                </div>
            </section>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/calendar.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
}