@{
    ViewData["Title"] = "ForgetPassword";
}





<head>
    <title>密碼重設</title>
</head>
<body>
  
    <h1>忘記密碼</h1>

   <div id="app">
        <form >
            <label for="email">Email:</label>
            <input type="email" id="email" v-model="email" required>
                <button  @@click="sendVerificationCode">發送驗證碼</button>
        </form>

        <div v-if="resultMessage">{{resultMessage}}</div>
