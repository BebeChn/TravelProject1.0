@{
    ViewData["Title"] = "ForgetPassword";
}

@section Styles
    {
        <style>
        .app-container {
            display: flex;
            align-items: center;
            justify-content: center;
            height: 70vh;
        }

        .app-content {
            background-color: white;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0px 2px 4px rgba(0, 0, 0, 0.1);
            width: 420px;
            text-align: center;
        }

        .input-group .input-field {
            flex: 1;
            padding: 10px;
            border: 1px solid deepskyblue;
            border-radius: 3px;
        }

        .input-label {
            font-weight: bold;
        }

        .input-field {
            width: 100%;
            padding: 10px;
            margin: 5px 0;
            border: 1px solid deepskyblue;
            border-radius: 3px;
        }

        .label-group {
            display: flex;
            align-items: center;
            margin-bottom: 10px; /* 調整容器間距 */
        }

            .label-group .input-label {
                font-weight: bold;
                width: 100px;
                margin-right: 10px;
            }

            .label-group .dup{
                position: absolute;
                left: calc(100% + 10px);
                z-index: 1;
            }
           
            
        .dup {
            display: block;
             margin: 20px 150px;
            text-align: center;
            background-color: #fad384;
            padding: 8px;
            font-size: 15px;
            border-radius: 18px;
            outline: none;
            color: rgb(19, 23, 27);
            width: 100px;
            background-color: white;
            border: 1px solid deepskyblue;
            cursor: pointer;
           
        }

            .dup:hover {
                border: 1.5px solid black;
            }
        </style>
   
        }



    <title>密碼重設</title>


  

    <div id="app">
    <div class="app-container">
        <div class="app-content">
                <h1>忘記密碼</h1>
                <div class="label-group">
                    <label for="emailInput" class="input-label">Email:</label>
                    <input type="email" id="emailInput" v-model="email" class="input-field" required>
                    
                </div>
                <button @@click="sendVerificationCode" class="dup">發送</button>
                <div class="label-group">
                    <label for="verificationCode" class="input-label">驗證碼:</label>
                    <input type="text" id="verificationCode" v-model="verificationCode" class="input-field" required>
                </div> 
                <button id="resetPasswordButton" class="dup">驗證</button>
            </div>
        </div>
    </div>
 




@section Scripts
    {
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/axios/1.4.0/axios.min.js" integrity="sha512-uMtXmF28A2Ab/JJO2t/vYhlaa/3ahUOgj1Zf27M5rOo8/+fcTUVH0/E0ll68njmjrLqOBjXM3V9NiPFL5ywWPQ==" crossorigin="anonymous" referrerpolicy="no-referrer"></script>
    <script src="~/js/verticationcode.js"></script>
    <script>
       
        var baseAddress = "https://localhost:7025";
        var vueApp = new Vue({
            el: "#app",
            data: {
                email:"",
                verificationCode: "",
                id:"",
              
            },
            methods: {
                sendVerificationCode: function () {
                    let _this = this;
                    axios.post(`${baseAddress}/api/UserApi/SendVerificationCode`, { email: _this.email,id:_this.id })
                        .then(response => {
                            console.log(response);
                        })
                        .catch(error => {
                            console.log(error);
                        });
                },
                verifyCode:function() {
                    let _this = this;
                    axios.post(`${baseAddress}/api/UserApi/VerifyCode`, {
                        CodeId: _this.verificationCode,
                        Code: _this.verificationCode,
                    })
                        .then(function (response) {
                        if (response.data) { 
                            alert("成功");
                          const email = _this.email;
                          const encodedEmail = encodeURIComponent(email);
                          const resetPasswordURL = `/User/ResetPassword?email=${encodedEmail}`;
                         window.location.href = resetPasswordURL;
                        }
                        })
                        .catch(function (error) {
                            console.log(error);
                        });
                },

            }
        });

    </script>

}