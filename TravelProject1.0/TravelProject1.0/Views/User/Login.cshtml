@model TravelProject1._0.Models.DTO.UserDTO
@section Styles
    {
    <link href="~/css/login.min.css" rel="stylesheet" />
}

@{
    ViewData["Title"] = "會員登入";
}



<div class="app-container element">
    <h1>會員登入</h1>
    <form action="@Url.Action("Login")" method="post" class="login">
        <br>
        <br>
        <div class="inputbox">
            <input type="text" asp-for="@Model.Email" required value="AAA@gmail.com" />
            <span asp-validation-for="@Model.Email">帳號</span>
        </div>
        <br>
        <div class="inputbox">
            <input type="password" type="Password" asp-for="@Model.Password" required  value="Abcd1234!"/>
            <span asp-validation-for="@Model.Password" >密碼</span>
        </div>
        <div class="row">
            <div class="col-md-8">
                <div class="checkbox mb-3">
                    <label asp-for="@Model.RememberMe" class="labelstyle" style="font-size: 18px; color: white; font-weight: bold;">
                        <input class="form-check-input" name="Email" asp-for="@Model.RememberMe" />
                        @Html.DisplayNameFor(m => m.RememberMe)
                    </label>
                </div>
            </div>
            <div class="col-md-4">
                <div class="mb-3">
                    <a id="forgot-password" asp-action="ForgetPassword" name="Password" style="font-size: 18px; color: #ffccd5; font-weight: bold;">忘記密碼</a>
                </div>
            </div>
        </div>
        <input class="dup" type="submit" id="login-button" value="登入" />
        <div style="font-size: 24px; color: white; font-weight: bold;">還不是會員嗎?立即註冊!!!</div>
        <a class="dup btn" asp-controller="User" asp-action="Register">註冊</a>
    </form>

    <div class="modal fade" id="errorModal" tabindex="-1" aria-labelledby="errorModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="errorModalLabel">提示訊息</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    使用者輸入帳號或密碼錯誤,請再試一次
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
                </div>
            </div>
        </div>
    </div>

</div>
     

@section Scripts {

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            document.getElementById("login-button").addEventListener("click", function (e) {
                e.preventDefault();
                var email = document.querySelector('input[name="Email"]').value;
                var password = document.querySelector('input[name="Password"]').value;
                if (email === "AAA@gmail.com" && password === "Abcd1234!") {
                    document.querySelector("form").submit();
                } else {
                    $('#errorModal').modal('show');
                }
            });
        });
    </script>
}


