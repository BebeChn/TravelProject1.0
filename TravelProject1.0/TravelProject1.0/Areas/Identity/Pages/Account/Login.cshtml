@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

@section Styles{
    <link href="~/css/login.min.css" rel="stylesheet" />
}

<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col">
        <form id="account" method="post">
            <h2 style="text-align:center">登入</h2>
            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.UserName" class="form-label labelstyle" style="text-align:center">帳號</label>
                    <input asp-for="Input.UserName" class="form-control accountstyle" autocomplete="username" aria-required="true" placeholder="請輸入帳號" />
                    <span asp-validation-for="Input.UserName" class="text-danger" style="text-align:center;display:block"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="form-label labelstyle ">密碼</label>
                    <input asp-for="Input.Password" class="form-control passwordstyle" autocomplete="current-password" aria-required="true" placeholder="請輸入密碼" />
                    <span asp-validation-for="Input.Password" class="text-danger" style="text-align:center;display:block"></span>
                </div>
            </div>
            <div class="checkbox mb-3 forgetstyle">
                <label asp-for="Input.RememberMe ">
                    <input class="form-check-input" asp-for="Input.RememberMe" style="text-align:center" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword">忘記密碼</a>
            </div>
            <div>
                <button id="login-submit" type="submit" class="dup">登入</button>
            </div>
            <div class="mb-3 forgetstyle">
                <p>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">註冊帳號</a>
                </p>
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">寄送電子郵件認證</a>
                </p>
            </div>
        </form>
    </div>
