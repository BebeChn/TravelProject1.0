@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
@section Styles
    {
    <link href="~/css/login.min.css" rel="stylesheet" />


}
<h1>@ViewData["Title"]</h1>
<div class="row">
    <div class="col">

        <form id="account" method="post" class="back ">
            <h2 style="text-align:center">登入</h2>

            <div>
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="labelstyle " for="bindinput" style="text-align:center">Email:</label>
                    <input asp-for="Input.Email" class=" form-label accountstyle" autocomplete="username" aria-required="true" placeholder="請輸入帳號" id="bindinput" name="bindinput" />

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="labelstyle ">Password:</label>
                    <input asp-for="Input.Password" class="passwordstyle" autocomplete="current-password" aria-required="true" placeholder="請輸入密碼" />
                    <div style=”text-align: center;>
                        <span asp-validation-for="Input.Password" class="text-danger"> </span>
                    </div>
                </div>
            </div>

            <div class="checkbox mb-3 forgetstyle">
                <label asp-for="Input.RememberMe ">
                    <input class="form-check-input" asp-for="Input.RememberMe" style="text-align:center" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
                <a id="forgot-password" asp-page="./ForgotPassword">忘記密碼</a>
            </div>

            <div>
                <button id="login-submit" type="submit" class="dup">登入</button>
                <a class="nav-link" asp-area="Identity" asp-page="/Account/Register">
                    <button type="button" class="reg">註冊會員</button>
                </a>
            </div>
            <div class=" mb-3 forgetstyle">
                <p>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">寄送電子郵件認證</a>
                </p>
            </div>
        </form>

    </div>
