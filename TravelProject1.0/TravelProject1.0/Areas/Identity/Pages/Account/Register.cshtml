@page
@model RegisterModel
@{
    ViewData["Title"] = "註冊頁面";
}
@section Styles{
    <link href="~/css/register.min.css" rel="stylesheet" />
<style>

</style>
}
<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify">
        <div class="circle">輸入資料</div>
        <div class="xuxian"></div>
        <div class="circlegray">發送驗證碼</div>
        <div class="xuxian"></div>
        <div class="circlegray">設定密碼</div>
        <div class="xuxian"></div>
        <div class="circlegray">完成註冊</div>
    </div>
    <div style="background-color:aliceblue"></div>
</div>
<div class="row">
    <div class="col">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <label asp-for="Input.UserName" class="labelstyle" style="text-align:center">帳號</label>
                <input asp-for="Input.UserName" class="form-control inputstyle"  autocomplete="username" aria-required="true" placeholder="請輸入帳號" />
                <span asp-validation-for="Input.UserName" class="text-danger" style="text-align:center;display:block"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Email" class="labelstyle" style="text-align:center">郵件</label>
                <input asp-for="Input.Email" class="form-control inputstyle" autocomplete="username" aria-required="true" placeholder="請輸入帳號" />
                <span asp-validation-for="Input.Email" class="text-danger" style="text-align:center;display:block"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Input.Password" class="labelstyle">密碼</label>
                <input asp-for="Input.Password" class="form-control inputstyle"  autocomplete="new-password" aria-required="true" placeholder="請輸入密碼" />
                <span asp-validation-for="Input.Password" class="text-danger" style="text-align:center;display:block"></span>
            </div>
            <div class=" mb-3">
                <label asp-for="Input.ConfirmPassword" class="labelstyle">重複輸入密碼</label>
                <input asp-for="Input.ConfirmPassword" class="form-control submitstyles" autocomplete="new-password" aria-required="true" placeholder="重複輸入密碼" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger" style="text-align:center;display:block"></span>
            </div>
            <button id="registerSubmit" type="submit" class="dup" style="text-align:center">下一步</button>
        </form>
    </div>
