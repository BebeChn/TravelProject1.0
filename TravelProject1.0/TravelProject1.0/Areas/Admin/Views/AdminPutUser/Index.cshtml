@section Styles
{
    <link href="~/css/super.css" rel="stylesheet" />
    <style>
    .custom-th {
     text-align: center; 
      width: 200px
    }
    </style>
}
<div id="app">
    <div>
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th scope="col" class="custom-th">編號</th>
                    <th scope="col">帳號</th>
                    <th scope="col">信箱</th>
                    <th scope="col">性別</th>
                    <th scope="col">生日</th>
                    <th scope="col">電話</th>
                    <th scope="col" class="col-lg-3">編輯</th>
                </tr>
            </thead>
            <tbody>
                <tr v-for="pu in putUser" >
                    <th class="custom-th">{{pu.Id}}</th>
                    <td>{{pu.name}}</td>
                    <td>{{pu.email}}</td>
                    <td>{{pu.gender}}</td>
                    <td>{{pu.birthday}}</td> 
                    <td>{{pu.phone}}</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>

@section Scripts
    {
    <script src="~/lib/jquery/dist/jquery.min.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/vue@2.7.14/dist/vue.js"></script>
    <script>
        var baseAddress = "https://localhost:7025";
        var app = new Vue({
            el: '#app',
            data: {
                putUser: [],
            },
            mounted: function () {
                let _this = this;
                fetch(`${baseAddress}/api/adminApi/AdminGetUser`).then(response => { 
                    if (response.ok) return response.json();
                }).then(data => {
                    _this.putUser = data;
                }).catch(err => {
                    alert("資料讀取失敗");
                })
            },
            methods: {
            },
        });
    </script>
}
