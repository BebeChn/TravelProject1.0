                    <tr>
                        <td>OrderId</td>
                        <td>UserId</td>
                        <td>OrderDate</td>
                    </tr>
                </thead>
                <tbody>
                
                    <tr v-for="item in OrderDTOes ">
                        <template v-if="item.Edit==true">
                            <td><label>{{item.orderId}}</label></td>
                            <td><label>{{item.userId}}</label></td>
                            <td><input v-model="item.orderDate" /></td>
                            <td>
                                <button type="button" class="btn btn-success" @@click="update(item)">儲存</button>
                                <button type="button" class="btn btn-info" @@click="cancel">取消</button>
                            </td>
                        </template>
                         <template v-else>
                                <td><label>{{item.orderId}}</label></td>
                                <td><label>{{item.userId}}</label></td>
                                 <td><label>{{item.orderDate}}</label></td>
                                <td>
                                <button type="button" class="btn btn-primary" @@click="edit(item.orderId)">編輯</button>
                                <button type="button" class="btn btn-danger" @@click="deleteEmployee(item.orderId)">刪除</button>
                                </td>
                         </template>
                    </tr>
                
                </tbody>
             </table>
        </div>
    </div>
