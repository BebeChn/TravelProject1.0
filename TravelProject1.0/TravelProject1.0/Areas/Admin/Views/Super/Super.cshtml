@section Styles{
    <style>
        .upperLayer {
            margin-top: 50px;
        }

        td {
            height: 50px;
            border: 1px solid silver;
            text-align: center;
        }

        .formatError {
            color: #dc3545;
            font-size: .875em;
        }
    </style>
}


<div id="app">
    <div>
        <div class="row upperLayer">
            @* 搜尋 *@
            <div class="col-10">
                <input class="inp-search" type="text" placeholder="Search...">
            </div>
            @* 新增管理人 *@
            <div class="col-2">
                <button class="btn btn-success" data-toggle="modal" data-target="#newAdmin">新增管理人</button>
            </div>
        </div>
        @* 管理員資訊 *@
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead>
                    <tr>
                        <th style="width:75px;">編號</th>
                        <th>管理員名稱</th>
                        <th>帳號</th>
                        <th>管理權限</th>
                        <th style="width:100px;">建立日期</th>
                        <th>上線時間</th>
                        <th>編輯</th>
                    </tr>
                </thead>
                <tbody>
                    <tr v-for="pa in showAdmin">
                        <td>{{pa.id}}</td>
                        <td>{{pa.name}}</td>
                        <td>{{pa.account}}</td>
                        <td>{{pa.describe}}</td>
                        <td>{{pa.createDate | formatDate}}</td>
                        <td>{{pa.loginDate | formatDate}}</td>
                        <td>
                            <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#UpdateAdmin" @@click="updateAdmin">編輯</button>
                            <button type="button" class="btn btn-danger" @@click="deleteAdmin(pa.id)">刪除</button>
                        </td>
                    </tr>
                </tbody>
            </table>
            @* 分頁 *@
            <nav class="blog-pagination justify-content-center d-flex">
                <ul class="pagination">
                    <paginate :page-count="total"
                              :click-handler="changePage"
                              :page-class="'page-item'"
                              :page-link-class="'page-link'"
                              :prev-class="'page-link'"
                              :prev-link-class="'lnr lnr-chevron-left'"
                              :next-class="'page-link'"
                              :next-link-class="'lnr lnr-chevron-right'"
                              :container-class="'pagination'">
                    </paginate>
                </ul>
            </nav>
        </div>
    </div>

    @*新增管理員記錄Bootstrap Modal畫面*@
    <div class="modal fade" id="newAdmin" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleId">新增管理員</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">名稱：</label>
                        <input v-model.trim="newAdmin.name" type="text" class="form-control" required />
                        <div v-if="!isValid(newAdmin.name,validType.name)" class="formatError">您輸入的格式錯誤</div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">帳號：</label>
                        <input v-model.trim="newAdmin.account" type="email" class="form-control" required />
                        <div class="formatError" v-if="!isValid(newAdmin.account,validType.email)">您輸入的格式不正確</div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">密碼：</label>
                        <input v-model.trim="newAdmin.password" type="email" class="form-control" required />
                        <div class="formatError" v-if="!isValid(newAdmin.password,validType.password)">您輸入的格式不正確</div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">管理權限描述：</label>
                        <select class="form-control" v-model="newAdmin.describe">
                            <option value="manage">修改</option>
                            <option value="view">觀看</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @@click="createAdmin">新增</button>
                    <button type="button" data-dismiss="modal" class="btn btn-secondary" @@click="formClear">取消</button>
                </div>
            </div>
        </div>
    </div>

    @*修改管理員記錄Bootstrap Modal畫面*@
    <div class="modal fade" id="UpdateAdmin" data-backdrop="static" data-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalTitleId">修改管理人資料</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true"><i class="fa-solid fa-xmark"></i></span>
                    </button>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <label class="form-label">管理人：</label>
                        <input v-model.trim="UpdateAdmin.name" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">帳號：</label>
                        <input v-model.trim="UpdateAdmin.account" type="email" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">密碼：</label>
                        <input v-model.trim="UpdateAdmin.password" type="text" class="form-control" required />
                    </div>
                    <div class="form-group">
                        <label class="form-label">管理權限描述：</label>
                        <select class="form-control" v-model="UpdateAdmin.describe">
                            <option value="manage">修改</option>
                            <option value="view">觀看</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-primary" @@click="updateAdmin(UpdateAdmin)">修改</button>
                    <button type="button" data-dismiss="modal" class="btn btn-primary" @@click="formClear">取消</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/js/validation.min.js"></script>
    <script src="https://unpkg.com/vuejs-paginate@0.9.0"></script>
    <script>
        Vue.component('paginate', VuejsPaginate)
        var app = new Vue({
            el: '#app',
            data: {
                putAdmin: [],
                UpdateAdmin: [],
                newAdmin: {
                    name: '',
                    account: '',
                    password: '',
                    describe: '',
                    loginDate: ''
                },
                searchQuery: '',
                validType: validType,
                currentPage: 1,
                itemPage: 7
            },
            mounted: function () {
                let _this = this;
                //管理員資訊
                fetch(`/api/SuperApi/SuperGET`, { method: "GET" })
                    .then(response => {
                        if (response.ok) return response.json();
                    }).then(data => {
                        _this.putAdmin = data;
                    }).catch(err => {
                        alert("資料讀取失敗");
                    });
            },
            methods: {
                isValid: function (str, type) {
                    return window.validation(str, type);
                },
                //新增管理員
                createAdmin: function () {
                    let _this = this;
                    let form = {
                        id: 0,
                        name: _this.newAdmin.name,
                        account: _this.newAdmin.account,
                        password: _this.newAdmin.password,
                        describe: _this.newAdmin.describe,
                        loginDate: new Date(),
                    };
                    fetch(`/api/SuperApi/SuperPost`, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(form)
                    }).then(response => {
                        if (response.ok) {
                            alert("管理員新增成功");
                        } else {
                            alert("管理員新增失敗");
                        }
                    }).catch(err => {
                        alert("管理員新增失敗");
                    });
                },
                //刪除管理員
                deleteAdmin: function (id) {
                    let _this = this;
                    let result = confirm(`確定要刪除會員編號${id}?`);
                    if (result == true) {
                        fetch(`/api/SuperApi/SuperDel/${id}`, { method: "DELETE" })
                            .then((response) => {
                                if (response.ok) return response.text();
                            }).then(data => {
                                alert("刪除成功");
                            }).catch(err => {
                                alert("刪除失敗");
                            });
                    }
                },
                //修改管理員
                updateAdmin: function (model) {
                    let _this = this;
                    console.log(model);
                    let result = confirm(`確定要更新管理員名稱為${_this.UpdateAdmin.name}的管理員資訊？`);
                    if (result == true) {
                        let request = {
                            name: model.name,
                            account: model.account,
                            password: model.password,
                            describe: model.describe,
                            createDate: new Date(),
                            loginDate: new Date(),
                        };
                        fetch(`/api/adminApi/AdminPutUser/${model.id}`, {
                            method: "PUT",
                            headers: { "Content-Type": "application/json" },
                            body: JSON.stringify(request)
                        }).then(response => {
                            if (response.ok) return response.text();
                        }).then(data => {
                            alert("修改成功");
                        }).catch(err => {
                            alert("修改失敗,請檢查必填有無填寫")
                        });
                    }
                },
                formClear: function () {
                    this.newAdmin = {
                        name: '',
                        account: '',
                        password: '',
                        Role: '',
                        birthday: '',
                        phone: '',
                        password: ''
                    }
                },
                //分頁
                changePage: function (num) {
                    let _this = this;
                    _this.currentPage = num;
                },
            },
            computed: {
                //分頁
                showAdmin: function () {
                    let _this = this;
                    var start = (_this.currentPage - 1) * _this.itemPage;
                    var end = start + _this.itemPage;
                    return this.putAdmin.slice(start, end);
                },
                total: function () {
                    let _this = this;
                    return Math.ceil(_this.putAdmin.length / _this.itemPage);
                }
            },
            filters: {
                //日期格式
                formatDate: function (str) {
                    if (!str) return "";
                    var d = new Date(str);
                    return `${d.getFullYear()}/${d.getMonth() + 1}/${d.getDate()}`
                }
            },
        });
    </script>
}